<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.krivamail.l.project1.MainActivity"
    android:background="#f9e50a">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В роботі"
        android:id="@+id/button"
        android:singleLine="false"
        android:background="#4b60b2"
        android:textStyle="bold"
        android:textColor="#fffcfc"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Комунальне господарство"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#0e0101" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Створено"
        android:id="@+id/textView4"
        android:textColor="#6e19e4"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="25 лютого 2016"
        android:id="@+id/textView5"
        android:textColor="#130202"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Зареєстровано"
        android:id="@+id/textView6"
        android:textColor="#5e20e4"
        android:layout_gravity="center"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="26 лютого 2016"
        android:id="@+id/textView7"
        android:textColor="#130202"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/editText3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Вирішити до"
        android:id="@+id/textView8"
        android:textColor="#5b20e4"
        android:layout_gravity="center"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Дніпропетровський МВК()"
        android:id="@+id/textView9"
        android:textColor="#130202"
        android:layout_alignTop="@+id/editText6"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Открытый люк (возле рекламного щита), район"
        android:id="@+id/textView10"
        android:textColor="#0f0101"
        android:layout_below="@+id/editText6"
        android:layout_alignStart="@+id/editText4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="поворота 18 и 19 трамваев на проспект Мира с"
        android:id="@+id/textView11"
        android:textColor="#120202"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Донецкого шоссе"
        android:id="@+id/textView12"
        android:textColor="#150202"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignEnd="@+id/editText4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Відповідальний"
        android:id="@+id/textView"
        android:textColor="#5e20e4"
        android:layout_gravity="center"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="29 лютого 2016"
        android:id="@+id/textView3"
        android:textColor="#130202"
        android:layout_below="@+id/editText3"
        android:layout_alignEnd="@+id/editText3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView12">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:src="@android:drawable/btn_star_big_on"
        android:background="#083c89"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/linearLayout" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:id="@+id/imageView2"
        android:src="@android:drawable/star_big_on"
        android:background="#0030ce"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignStart="@+id/textView9" />


</RelativeLayout>
